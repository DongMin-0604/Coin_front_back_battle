<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#EEF1F1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEF1F1"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:layout_gravity="center"
            android:src="@drawable/logo1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15px"
            android:background="#FFADDB" />

        <LinearLayout
            android:id="@+id/touch_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TOUCH_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TOUCH!"
                android:textColor="#CA81AA"
                android:textSize="60px" />

            <ImageView
                android:id="@+id/change_img"
                android:layout_width="420px"
                android:layout_height="420px"
                android:layout_gravity="center"
                android:src="@drawable/coin_front" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15px"
            android:background="#FFADDB" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:text="각 결과에 따라 결정될 조건을 입력하세요."
            android:textColor="@color/black"
            android:textSize="50px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ex) 치킨,피자"
            android:textColor="#375DBC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="270px"
                android:layout_height="210px"
                android:layout_weight="1"
                android:src="@drawable/coin_front" />

            <ImageView
                android:layout_width="270px"
                android:layout_height="210px"
                android:layout_weight="1"
                android:src="@drawable/coin_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="350px"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/front_BT"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_marginEnd="43dp"
                android:backgroundTint="#FFADDB"
                android:text="앞"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/back_BT"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_marginStart="43dp"
                android:backgroundTint="#FFADDB"
                android:text="뒤"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
    <!--숨겨져 있는 조건 창-->
    <LinearLayout
        android:id="@+id/Batting_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A6000000"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="930px"
            android:layout_height="900px"
            android:layout_gravity="center"
            android:layout_marginBottom="50px"
            android:background="@drawable/popup_custom"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Batting_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:text="앞"
                android:textColor="@color/black"
                android:textSize="100px" />

            <EditText
                android:id="@+id/Value_ET"
                android:layout_width="700px"
                android:layout_height="500px"
                android:layout_marginTop="20px"
                android:background="@drawable/edit_text_border"
                android:gravity="left"
                android:hint="조건을 입력하세요"
                android:inputType="textMultiLine"
                android:lines="10"
                android:scrollbars="vertical"
                android:textSize="40px" />

            <Button
                android:id="@+id/go_main_BT"
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:backgroundTint="#FFADDB"
                android:text="확인"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>
    <!--숨겨져 있는 결과창 -->
    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#A6000000"
        android:gravity="center"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="900px"
            android:layout_height="900px"
            android:layout_gravity="center"
            android:layout_marginBottom="50px"
            android:background="@drawable/popup_custom"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/result_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:gravity="center"
                android:text="결과"
                android:textColor="@color/black"
                android:textSize="100px" />
            <TextView
                android:id="@+id/result_value_Text"
                android:layout_width="800px"
                android:layout_height="500px"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="40px"
                android:text="TEST"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/go_main_BT2"
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:backgroundTint="#FFADDB"
                android:text="확인"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>